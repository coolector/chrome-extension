{{#each items}}
<div class="coolector-box" {{#unless has_results}}style="overflow: hidden;"{{/unless }}>
    <div class="coolector-box-title">
        {{#if plugin.logo}}
        <img class="coolector-box-logo" src="{{plugin.logo}}" />
        {{/if}}
        {{plugin.name}} v{{plugin.version}}
        <a target="_blank" href="{{plugin.url}}">{{> icon-open-white }}</a>
    </div>
    {{#if has_results}}
    <div class="coolector-box-content">
        <div class="coolector-box-content-title">
            Item collected.
            {{> icon-more }}
            <div class="coolector-box-title-submenu" id="coolector-menu" style="display: none">
                <div class="coolector-box-title-submenu-button rttbtn1">{{> icon-delete }} Remove Item</div>
                <div class="coolector-box-title-submenu-button rttbtn2"><a target="_blank" href="{{item.url}}">{{> icon-open }} View Item</a></div>
            </div>
        </div>
        <div class="coolector-box-content-tags">
            {{> icon-tag }}
            <input type="text" id="coolector-tags" class="coolector-box-content-tags-input" placeholder="Add tags" value="{{tags}}"/>
        </div>
        <a target="_blank" href="{{item.url}}">
            <img src="{{item.image}}" class="coolector-box-content-image" />
        </a>
        <div class="coolector-box-content-text">
            {{item.title}}
        </div>
    </div>
    {{/if}}
</div>
{{/each}}