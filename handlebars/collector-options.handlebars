<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{name}} V{{version}}</h3>
    </div>
    <div class="panel-body collector-options">
        <p>{{description}}</p>
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">Logged in as:</label>
                <div class="col-sm-10">
                    <a target="_blank" href="{{url}}">{{user}}</a>
                </div>
            </div>
            <div class="form-group">
                <label for="{{id}}_enabled" class="col-sm-2 control-label">Enable collector</label>
                <div class="col-sm-10">
                    <input id="{{id}}_enabled" data-plugin="{{id}}" class="checkbox_enabled" type="checkbox" name="{{id}}_enabled" value="1" {{#if enable}}checked{{/if}}/>
                </div>
            </div>
        </form>
    </div>
</div>